<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="708dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:gravity="center"
            android:text="LATINO DISTRIBUIDORA"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/id_nombre_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/id_cedula_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Cedula de Identidad"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/id_direccion_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Direcci칩n"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/id_celular_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Celular"
            android:inputType="textPersonName" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="?android:attr/listDivider" />

        <EditText
            android:id="@+id/id_usuario_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/id_contrase침a_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contrase침a"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/id_confirmarcon_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirmar Contrase침a"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="29dp" />

        <Button
            android:id="@+id/idguardar_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR REGISTRO" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="119dp" />

        <Button
            android:id="@+id/id_btnListarUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnListarUsuarios" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>